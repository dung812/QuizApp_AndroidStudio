<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity"
    tools:ignore="InvalidId">


    <TextView
        android:id="@+id/idTVQuestionAttempted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/lato_regular"
        android:gravity="center"
        android:text="Number of Questions"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp">

    </TextView>

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/black"
        app:srcCompat="@drawable/back"
        tools:ignore="SpeakableTextPresentCheck" />

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="20"
        android:maxHeight="12dp"
        android:minHeight="12dp"
        android:progress="10" />

    <TextView
        android:id="@+id/idTVQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idTVQuestionAttempted"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/lato_bold"
        android:gravity="center"
        android:text="Question"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/idBtnOption1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/op1"
            android:fontFamily="@font/lato_bold"
            android:padding="4dp"
            android:text="Option 1"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp">

        </Button>

        <Button
            android:id="@+id/idBtnOption2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/op2"
            android:fontFamily="@font/lato_bold"
            android:padding="4dp"
            android:text="Option 2"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="18sp">

        </Button>

        <Button
            android:id="@+id/idBtnOption3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/op3"
            android:fontFamily="@font/lato_bold"
            android:padding="4dp"
            android:text="Option 3"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="18sp">

        </Button>

        <Button
            android:id="@+id/idBtnOption4"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/op4"
            android:fontFamily="@font/lato_bold"
            android:padding="4dp"
            android:text="Option 4"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="18sp">
        </Button>

    </LinearLayout>

</RelativeLayout>